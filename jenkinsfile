pipeline {
    agent any
    stages {
        stage('Install node modules') {
            steps {
                sh 'npm install'
            }
        }
        stage('Build') {
            steps {
                sh 'npm run build-locale'
            }
        }
        /*
        // The test will be created in a second stage...
        stage('Test') {
            steps {
                sh 'ng test'
            }
        } 
        */       
        stage('Deploy') {
            steps {
                sh 'sudo rm -r /var/www/stage.guilhermeborgesbastos.com/html/*'
                sh 'sudo cp -r ./dist/* /var/www/stage.guilhermeborgesbastos.com/html/'
            }
        }
        // Crawlers don't check for robots.txt files in subdirectories, therefore, copy the default (en) files to the root folder.
        stage('SEO Optimizations') {
            steps {
                sh 'sudo cp /var/www/stage.guilhermeborgesbastos.com/html/en/robots.txt /var/www/stage.guilhermeborgesbastos.com/html/robots.txt'
                sh 'sudo cp /var/www/stage.guilhermeborgesbastos.com/index.html /var/www/stage.guilhermeborgesbastos.com/html/index.html'
            }
        }            
    }
}